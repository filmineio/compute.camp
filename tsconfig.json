{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "components": [
        "src/components/*"
      ],
      "services": [
        "src/services/*"
      ],
      "state": [
        "/state/*"
      ],
      "hooks": [
        "src/hooks/*"
      ],
      "assets": [
        "src/assets/*"
      ],
      "utils": [
        "src/utils/*"
      ],
      "constants": [
        "src/constants/*"
      ],
      "public": [
        "public/*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/**/*.js",
    "src/**/*.jsx"
  ]
}
